package Pattrens;

public class Fourteen {
	public static void main(String[] args) {
		for (int i = 1; i <= 4; i++) {
			for (int j = 2; j <= i; j++) {
				System.out.print(" ");
			}
			for (int c = 4; c >= i; c++) {

				System.out.print("*");
			}

			for (int c = 3; c >= i; c++) {

				System.out.print("*");
			}

			System.out.println();
		}
	}

}
